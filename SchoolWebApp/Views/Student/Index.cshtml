@using SchoolTracker.Model
@using SchoolWebApp.Web.Models
@model List<Student>

@{
    ViewData["Title"] = "Popis studenata";
}

<h1>Popis studenata</h1>

<div style="margin-top: 20px; margin-bottom: 10px;">
    <partial name="_StudentFilter" model="new StudentFilterModel()" />
</div>

<div id="student-table-container">
    <partial name="_IndexTable" model="Model" />
</div>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#btn-filter").click(function () {
                const formData = $("#filter-form").serialize();
                $.ajax({
                    url: '@Url.Action("IndexAjax", "Student")',
                    type: 'POST',
                    data: formData,
                    success: function (result) {
                        $("#student-table-container").html(result);
                    }
                });
            });
        });

            $(document).on('click', '.btn-delete', function () {
            var studentId = $(this).data('id');
            var row = $(this).closest('tr');

            if (confirm('Jeste li sigurni da želite obrisati ovog učenika?')) {
                $.ajax({
                    url: '@Url.Action("DeleteConfirmed", "Student")', 
                    type: 'POST',
                    data: { id: studentId },
                    success: function (response) {
                        if (response.success) {
                            row.remove();
                        } else {
                            alert('Greška prilikom brisanja.');
                        }
                    },
                    error: function () {
                        alert('Došlo je do greške prilikom brisanja.');
                    }
                });
            }
        });
    </script>
}

